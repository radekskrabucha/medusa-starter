{
  "extends": "@total-typescript/tsconfig/tsc/dom/library-monorepo",
  "compilerOptions": {
    "outDir": "dist",
    "incremental": true,
    "rootDir": "src",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "exclude": [
    "eslint.config.js",
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "tests/**/*",
    "vitest.config.ts"
  ],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
